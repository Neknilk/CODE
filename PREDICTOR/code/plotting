# Importing necessary libraries
import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

# Load the dataset
file_path = 'C:/Users/jayva/Documents/GitHub/FOE/DATA/FILTERED/combined_filled.csv'
df = pd.read_csv(file_path, low_memory=False)

# Define independent and dependent variables
independent_variables = ['ground_speed', 'vertical_rate', 'flight_duration_seconds', 'track']
dependent_variables = ['altitude', 'latitude', 'longitude']

# Plot pairplot for scatterplots
sns.pairplot(df, x_vars=independent_variables, y_vars=dependent_variables, size=4, kind='scatter')
plt.show()

# Plot heatmap to find correlations
sns.heatmap(df[independent_variables + dependent_variables].corr(), cmap='YlGnBu', annot=True)
plt.show()
