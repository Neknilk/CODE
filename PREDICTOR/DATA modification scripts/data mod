import pandas as pd

# Specify the file path
file_path = r'C:\Users\jayva\Documents\GitHub\FOE\DATA\FILTERED\combined_data.csv'

# Read the CSV file into a pandas DataFrame
df = pd.read_csv(file_path, low_memory=False)

# Check if the 'flight_phase' column exists before deleting
if 'flight_phase' in df.columns:
    # Drop the 'flight_phase' column along with its content
    df.drop(columns=['flight_phase'], inplace=True)

    # Save the modified DataFrame back to the CSV file
    df.to_csv(file_path, index=False)

    print("Column 'flight_phase' and its content deleted successfully.")
else:
    print("Column 'flight_phase' not found in the DataFrame.")

